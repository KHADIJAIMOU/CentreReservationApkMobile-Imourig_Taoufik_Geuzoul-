<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFEFE"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="482dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="352dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:contentDescription="Logo"
            app:srcCompat="@drawable/image1"
            tools:ignore="NestedWeights" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/cercle3" />

        <TextView
            android:id="@+id/textViewenter"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Enter votre nouveau  mot de passe "
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewMotDePass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="10dp"

            android:text="Mot de pass "
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="22dp"
            android:layout_marginRight="33dp"
            android:layout_weight="1"
            android:background="@drawable/editround">



            <EditText
                android:id="@+id/editTextMotdepass"
                android:layout_width="303dp"
                android:layout_height="33dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="33dp"
                android:layout_marginBottom="5dp"

                android:layout_weight="1"
                android:background="@drawable/editround"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPersonName|text"
                android:textSize="20sp" />

        </LinearLayout>
        <TextView
            android:id="@+id/textViewConfirmerMp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="20dp"
            android:text="Confirmer *"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="33dp"
            android:layout_weight="1"
            android:background="@drawable/editround">

            <EditText
                android:id="@+id/editTextConfirmerMop"
                android:layout_width="303dp"
                android:layout_height="33dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="33dp"
                android:layout_marginBottom="5dp"

                android:layout_weight="1"
                android:background="@drawable/editround"
                android:ems="10"
                android:hint="Confirmer Mot de Pass"
                android:inputType="textPersonName|text"
                android:textSize="20sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonSuivant"
                android:layout_width="194dp"
                android:layout_height="54dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="100dp"
                android:background="@drawable/buttonround"
                android:text="RÃ©initialiser"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>