<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/modify_fragment"
    tools:context=".controller.ModifierreservFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:background="@color/reservBgColor">

        <ImageButton
            android:id="@+id/buttonBack2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="back"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservation"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:layout_gravity="center"

            />
    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Début"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="32dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/editTextDateD"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Saisir une date"
        android:inputType="date"
        android:minHeight="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:textColorHint="#6F6E6E"
        android:background="@drawable/edit_text_border"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date Début"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="32dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/editTextDateF"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Saisir une date"
        android:inputType="date"
        android:minHeight="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColorHint="#6F6E6E"
        android:background="@drawable/edit_text_border"
        />
    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Periode"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="32dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/editTextTempsD"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Saisir une heure"
        android:inputType="time"
        android:minHeight="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColorHint="#6F6E6E"
        android:background="@drawable/edit_text_tempsd"
        />
    <EditText
        android:id="@+id/editTextTempsF"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Saisir une heure"
        android:inputType="time"
        android:minHeight="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:textColorHint="#6F6E6E"
        android:background="@drawable/edi_text_tempsf"
        />
    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Objectif"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="32dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/editTextObj"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:ems="10"
        android:hint="Saisir votre objectif"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColorHint="#6F6E6E"
        android:background="@drawable/edit_text_border"
        />

    <Button
        android:id="@+id/btnmodifier"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:text="Modifier"
        android:textColor="@color/white"
        android:backgroundTint="@color/btnEditer"
        />
</LinearLayout>